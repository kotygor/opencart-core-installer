{
    "name": "kotygor/opencart-core-installer",
    "description": "Composer installer for Opencart",
    "type": "composer-plugin",
    "authors": [
        {
            "name": "Etki",
            "email": "etki@etki.name",
            "homepage": "http://etki.name",
            "role": "Developer"
        }],
    "support": {
        "issues": "https://github.com/kotygor/opencart-core-installer/issues",
        "source": "https://github.com/kotygor/opencart-core-installer.git"
    },
    "license": "MIT",
    "keywords": ["installer", "opencart"],
    "autoload": {
        "psr-4": {"Etki\\Composer\\Installers\\Opencart\\": "src/"}
    },
    "extra": {
        "class": "Etki\\Composer\\Installers\\Opencart\\Plugin",
        "opencart-install-dir": "www"
    },
    "require": {
        "php": "*",
        "symfony/console": "*",
        "symfony/filesystem": "*",
        "composer-plugin-api": "~1.1"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/kotygor/mylog"
        }
    ],
    "require-dev": {
        "composer/composer": "*",
        "codeception/codeception": "*"
    }
}
